<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    app:cardCornerRadius="4dp"
    android:layout_margin="10dp">

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView android:layout_width="168dp" android:layout_height="210dp"
            android:src="@drawable/product_photo"
            android:scaleType="centerCrop"
            android:id="@+id/product_photo"/>

        <LinearLayout android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/leftTitle"
            android:layout_alignBottom="@id/product_photo"
            android:background="@android:color/white"
            android:paddingVertical="2dp"
            android:paddingHorizontal="10dp"
            android:gravity="left">
            <TextView
                android:id="@+id/title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="123123"
                android:textSize="12sp"
                android:textColor="@color/purpleProductTitle"
                android:fontFamily="@font/gotham_medium"
                />
            <TextView
                android:id="@+id/subtitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="123123"
                android:textSize="9sp"
                android:textColor="@color/graySubtitle"
                android:fontFamily="@font/gotham_medium"

                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>