<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    app:cardCornerRadius="8dp"
    android:elevation="4dp" android:shadowColor="#55000000" android:shadowRadius="5"
    android:shadowDx="0" android:shadowDy="10" android:layout_margin="10dp">

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView android:layout_width="250dp" android:layout_height="150dp"
            android:src="@drawable/brand_photo"
            android:scaleType="centerCrop"
            android:id="@+id/brand_photo"/>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="-15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignTop="@id/text"
            android:id="@+id/cardView">

            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                android:src="@drawable/brand_icon"
                android:scaleType="centerCrop"
                android:id="@+id/icon"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_alignBottom="@id/brand_photo"
            android:paddingLeft="50dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="@android:color/white">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/leftTitle"
                android:gravity="left">
                <TextView
                    android:id="@+id/title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="123123"
                    android:textSize="15sp"
                    android:textColor="@color/purpleBrandTitle"
                    android:fontFamily="@font/gotham_bold"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/categories"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="123123"
                    android:textSize="9sp"
                    android:textColor="@color/graySubtitle"
                    android:fontFamily="@font/gotham_medium"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/leftTitle"
                android:layout_alignParentRight="true"
                android:gravity="right">
                <TextView
                    android:id="@+id/time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="123123"
                    android:textSize="12sp"
                    android:textColor="@color/grayText"
                    android:fontFamily="@font/gotham_medium"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/subtext"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="123123"
                    android:textSize="6sp"
                    android:textColor="@color/graySubtitle"
                    android:fontFamily="@font/gotham_medium"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>